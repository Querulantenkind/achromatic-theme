# ============================================================================
# ABYSS I3 CONFIGURATION
# Pure Monochrome Theme mit OmarchyOS Keybindings
# ============================================================================

# ----------------------------------------------------------------------------
# MODIFIER KEY
# ----------------------------------------------------------------------------

set $mod Mod4

# ----------------------------------------------------------------------------
# FONT
# ----------------------------------------------------------------------------

font pango:monospace 10

# ----------------------------------------------------------------------------
# COLOR DEFINITIONS (MONOCHROME)
# ----------------------------------------------------------------------------

# class                 border  backgr. text    indicator child_border
client.focused          #ffffff #1a1a1a #ffffff #ffffff   #ffffff
client.focused_inactive #111111 #0a0a0a #666666 #111111   #111111
client.unfocused        #111111 #0a0a0a #666666 #111111   #111111
client.urgent           #3a3a3a #2a2a2a #ffffff #3a3a3a   #3a3a3a
client.placeholder      #0a0a0a #0a0a0a #666666 #0a0a0a   #0a0a0a
client.background       #0a0a0a

# ----------------------------------------------------------------------------
# GAPS AND BORDERS
# ----------------------------------------------------------------------------

# Border settings
default_border pixel 2
default_floating_border pixel 2
hide_edge_borders none

# Gaps (requires i3-gaps)
gaps inner 5
gaps outer 10

# ----------------------------------------------------------------------------
# INPUT CONFIGURATION
# ----------------------------------------------------------------------------

# Keyboard layout (German)
exec --no-startup-id setxkbmap de

# ----------------------------------------------------------------------------
# WINDOW BEHAVIOR
# ----------------------------------------------------------------------------

# Focus follows mouse
focus_follows_mouse yes

# Mouse warping
mouse_warping output

# Popup behavior
popup_during_fullscreen smart

# Focus wrapping
focus_wrapping yes

# ----------------------------------------------------------------------------
# KEYBINDINGS - SYSTEM & I3
# ----------------------------------------------------------------------------

# Kill focused window
bindsym $mod+Shift+q kill

# Exit i3
bindsym $mod+Shift+Mod1+q exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'"

# Reload configuration
bindsym $mod+Shift+r reload

# Restart i3 in-place
bindsym $mod+Shift+c restart

# Fullscreen toggle
bindsym $mod+f fullscreen toggle

# Floating toggle
bindsym $mod+Shift+f floating toggle

# ----------------------------------------------------------------------------
# KEYBINDINGS - APPLICATIONS
# ----------------------------------------------------------------------------

# Terminal
bindsym $mod+Return exec kitty

# Application launcher (Rofi)
bindsym $mod+space exec rofi -show drun -show-icons

# Text editor
bindsym $mod+e exec kitty micro

# File manager
bindsym $mod+y exec kitty yazi

# Browser
bindsym $mod+Shift+b exec chromium

# ----------------------------------------------------------------------------
# KEYBINDINGS - WINDOW FOCUS (VIM-STYLE)
# ----------------------------------------------------------------------------

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Arrow keys alternative
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# ----------------------------------------------------------------------------
# KEYBINDINGS - MOVE WINDOWS
# ----------------------------------------------------------------------------

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Arrow keys alternative
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# ----------------------------------------------------------------------------
# KEYBINDINGS - RESIZE WINDOWS
# ----------------------------------------------------------------------------

mode "resize" {
    bindsym h resize shrink width 20 px or 2 ppt
    bindsym j resize grow height 20 px or 2 ppt
    bindsym k resize shrink height 20 px or 2 ppt
    bindsym l resize grow width 20 px or 2 ppt

    bindsym Left resize shrink width 20 px or 2 ppt
    bindsym Down resize grow height 20 px or 2 ppt
    bindsym Up resize shrink height 20 px or 2 ppt
    bindsym Right resize grow width 20 px or 2 ppt

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

# Quick resize (without mode)
bindsym $mod+Ctrl+h resize shrink width 20 px or 2 ppt
bindsym $mod+Ctrl+j resize grow height 20 px or 2 ppt
bindsym $mod+Ctrl+k resize shrink height 20 px or 2 ppt
bindsym $mod+Ctrl+l resize grow width 20 px or 2 ppt

bindsym $mod+Ctrl+Left resize shrink width 20 px or 2 ppt
bindsym $mod+Ctrl+Down resize grow height 20 px or 2 ppt
bindsym $mod+Ctrl+Up resize shrink height 20 px or 2 ppt
bindsym $mod+Ctrl+Right resize grow width 20 px or 2 ppt

# ----------------------------------------------------------------------------
# KEYBINDINGS - LAYOUT
# ----------------------------------------------------------------------------

# Split orientation
bindsym $mod+v split toggle

# Layout modes (remapped to avoid conflict with scratchpad)
bindsym $mod+Shift+t layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split

# Focus parent/child
bindsym $mod+a focus parent
bindsym $mod+d focus child

# Toggle tiling/floating focus
bindsym $mod+g focus mode_toggle

# ----------------------------------------------------------------------------
# WORKSPACES
# ----------------------------------------------------------------------------

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# Move container silently (without following)
bindsym $mod+Ctrl+Shift+1 move container to workspace number $ws1; workspace number $ws1
bindsym $mod+Ctrl+Shift+2 move container to workspace number $ws2; workspace number $ws2
bindsym $mod+Ctrl+Shift+3 move container to workspace number $ws3; workspace number $ws3
bindsym $mod+Ctrl+Shift+4 move container to workspace number $ws4; workspace number $ws4
bindsym $mod+Ctrl+Shift+5 move container to workspace number $ws5; workspace number $ws5
bindsym $mod+Ctrl+Shift+6 move container to workspace number $ws6; workspace number $ws6
bindsym $mod+Ctrl+Shift+7 move container to workspace number $ws7; workspace number $ws7
bindsym $mod+Ctrl+Shift+8 move container to workspace number $ws8; workspace number $ws8
bindsym $mod+Ctrl+Shift+9 move container to workspace number $ws9; workspace number $ws9

# Workspace navigation (OmarchyOS style)
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# ----------------------------------------------------------------------------
# SCRATCHPAD (OmarchyOS style)
# ----------------------------------------------------------------------------

bindsym $mod+s scratchpad show
bindsym $mod+Shift+s move scratchpad

# ----------------------------------------------------------------------------
# MOUSE BINDINGS
# ----------------------------------------------------------------------------

# Drag floating windows
floating_modifier $mod

# Middle click on title bar kills window
bindsym --release button2 kill

# Right click on title bar toggles floating
bindsym button3 floating toggle

# ----------------------------------------------------------------------------
# SCREENSHOT
# ----------------------------------------------------------------------------

# Full screen screenshot
bindsym Print exec --no-startup-id scrot ~/Pictures/screenshot-%Y%m%d-%H%M%S.png

# Selection screenshot
bindsym Shift+Print exec --no-startup-id scrot -s ~/Pictures/screenshot-%Y%m%d-%H%M%S.png

# ----------------------------------------------------------------------------
# AUDIO CONTROLS
# ----------------------------------------------------------------------------

bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# ----------------------------------------------------------------------------
# MEDIA CONTROLS
# ----------------------------------------------------------------------------

bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# ----------------------------------------------------------------------------
# BRIGHTNESS CONTROLS
# ----------------------------------------------------------------------------

bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl set 5%+
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl set 5%-

# ----------------------------------------------------------------------------
# WINDOW RULES
# ----------------------------------------------------------------------------

# Floating windows
for_window [class="Pavucontrol"] floating enable
for_window [class="Nm-connection-editor"] floating enable
for_window [title="File Operation Progress"] floating enable
for_window [class="Rofi"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="task_dialog"] floating enable

# Focus on urgent
for_window [urgent=latest] focus

# ----------------------------------------------------------------------------
# BAR CONFIGURATION
# ----------------------------------------------------------------------------

bar {
    status_command i3status
    position top
    
    font pango:monospace 10
    separator_symbol " | "
    
    colors {
        background #0a0a0a
        statusline #e0e0e0
        separator  #2a2a2a
        
        #                  border  backgr. text
        focused_workspace  #ffffff #1a1a1a #ffffff
        active_workspace   #2a2a2a #111111 #cccccc
        inactive_workspace #111111 #0a0a0a #666666
        urgent_workspace   #3a3a3a #2a2a2a #ffffff
        binding_mode       #2a2a2a #1a1a1a #ffffff
    }
}

# ----------------------------------------------------------------------------
# AUTOSTART
# ----------------------------------------------------------------------------

exec --no-startup-id dunst
exec --no-startup-id nm-applet
exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --color=0a0a0a

# ============================================================================

